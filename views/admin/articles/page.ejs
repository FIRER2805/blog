<%- include("../../partials/header.ejs"); %>
<%- include("../../partials/homePageNavbar.ejs"); %>
<body>
    <br>
    <div class="container">
        <% result.articles.rows.forEach(article=>{ %>
            <div class="card">
                <div class="card-header">
                    <h3><%=article.title%></h3>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ver artigo</a>
                </div>
            </div>
            <br>
        <% }); %>
        <div class="row">
            <div class="column">

                <!-- botÃ£o de previous -->
                <% if(result.page == 2) {%>
                    <a style="float:left" href="/"><<< Prev</a>
                <% } else if(result.page > 2){ %>
                    <a style="float:left" href="/articles/page/<%= result.page - 1%>"><<< Prev</a>
                <% } %>

                <!-- botÃ£o de next -->
                <% if(result.next){ %>
                    <a style="float:right" href="/articles/page/<%= result.page + 1%>">Next >>></a>
                <% } %>
            </div>
        </div>
        <hr>
    </div>
</body>
